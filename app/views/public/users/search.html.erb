<div class="container">
  <% if @result.present? %>
    <div class="row mt-3">
      <h2 class="bg-brown mt-3 text-left ">
        <% if (params[:q][:name_cont]).present? %>
          <i class="fa-solid fa-magnifying-glass"></i>
          晩酌愛好家の検索結果 "<%= params[:q][:name_cont] %>" さん(全 <%= @users.total_count %> 人)
        <% end %>
      </h2>
    </div>
    <div class="row">
      <%= render "users-index", users: @users %>
    </div>
    <div class="d-flex justify-content-center mt-3 custom-pagination">
      <%= paginate @users %>
    </div>
  <% else %>
    <div class="col-12 my-3">
      <div class="d-flex align-items-center">
        <h2 class="my-5">--検索ワードを入力してください--</h2>
      </div>
    </div>
  <% end %>
  <%= link_to('javascript:history.back()', class: "text-success ml-5") do %>
    <strong><i class="fa-solid fa-circle-left ml-2"></i>戻る</strong>
  <% end %>
</div>
