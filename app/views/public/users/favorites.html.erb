<div class="container">
  <div class="row mt-3">
    <h2 class="mt-3 text-left bg-brown"><%= @user.name %>さんのお気に入りのおつまみたち</h2>
  </div>
  <div class="row">
    <% if @recipes.present? %>
      <%= render "public/recipes/recipe-index", recipes: @recipes %>
    <% else %>
      <div class="col text-center">
        <h2>--お気に入りのおつまみはありません--</h2>
      <div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-3 custom-pagination">
    <%= paginate @recipes %>
  </div>
</div>
