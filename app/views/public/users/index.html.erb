<div class="container">
  <div class="row mt-3">
    <div class="col-12 col-md-7 mb-3 mx-auto">
      <%= render 'user-search-form' %>
    </div>
  </div>
  <div class="row">
    <div class="mt-3 d-flex align-items-center justify-content-between">
      <h2 class="bg-brown">晩酌愛好家の一覧(全 <%= @users.total_count %> 人)</h2>
      <h5 class="crown-sort mt-3 ml-5">
        <i class="crown fa-solid fa-crown"></i>
        "<%= @sort_by %>" で表示中
        <i class="crown fa-solid fa-crown"></i>
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="ml-auto mr-5">
      <!-- 並び替え機能 -->
      <p class="mt-3 mb-0 ml-auto">
        <%= link_to "古い順", users_path(old: ":true"), class: "mx-2" %>
        |<%= link_to "新着順", users_path(latest: ":true"), class: "mx-2" %>
        |<%= link_to "投稿数", users_path(most_recipes: "true"), class: "mx-2" %>
        |<%= link_to "フォロワー数", users_path(most_followers: "true"), class: "mx-2" %>
        |<%= link_to "いいね獲得総数", users_path(most_favorited_recipes: "true"), class: "mx-2" %>
        |<%= link_to "総閲覧数", users_path(most_viewed: "true"), class: "mx-2" %>
      </p>
    </div>
  </div>
  <div class="row">
    <%= render "users-index", users: @users %>
  </div>
</div>