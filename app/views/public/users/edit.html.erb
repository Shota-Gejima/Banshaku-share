<div class="container">
  <div class="row">
    <h2 class="bg-brown mt-5 mx-auto">プロフィール編集</h2>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto">
      
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div class="mb-3">
          <div class="form-group mt-3">
            <label for="inputName">ユーザー名</label>
            <label class="form-word">※必須 1文字以上7文字以下</label> 
            <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control", placeholder: "1文字以上7文字以下" %>
          </div>
          <div class="form-group mt-3">
            <label for="inputName">自己紹介</label>
            <label class="form-word">※50文字以下</label> 
            <%= f.text_field :introduction, autofocus: true, id: "inputIntroduction", class: "form-control", placeholder: "50文字以下" %>
          </div>
          <div class="form-group mt-3">
            <label for="inputProfileImage">プロフィール画像</label>
            <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
          </div>
          <div class="form-group mt-3">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
            <%= link_to "退会する", user_confirm_path(@user.id), class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to('javascript:history.back()', class: "text-success") do %>
      <strong><i class="fa-solid fa-circle-left ml-2"></i></i>戻る</strong>
    <% end %>
  </div>
</div>