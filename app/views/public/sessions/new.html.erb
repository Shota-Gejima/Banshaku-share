<div class="container">
  <div class="row">
    <h2 class="bg-brown mt-5 mx-auto">ログイン</h2>
  </div>
  <div class="row">
    <div class="mx-auto mt-3">
      <div class="col-12 mx-auto">
        <p class="my-3">会員の方はこちらからログインしてください</p>
      </div>
      <%= form_with model: @user, url: new_user_session_path do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
        </table>
        <%= f.submit "ログインする",class: 'btn btn-success form-control' %>
      <% end %>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>