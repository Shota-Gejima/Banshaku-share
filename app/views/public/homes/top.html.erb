<div class="container">
  <div class="row">
    <div class="col-10 mt-5">
      <%= render 'slide' %>
    </div>
  </div>
  <h3 class="mt-3">新着のおつまみ</h3>
  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-3 lg-4 my-3"> 
        <div class="card w-100 bg-transparent border-0">
          <%= link_to recipe_path(recipe.id) do %>
            <%= image_tag recipe.get_recipe_image(150, 100) %>
          <% end %>
          <div class="card-body" style="padding: 0;">
            <%= recipe.title %></br>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
