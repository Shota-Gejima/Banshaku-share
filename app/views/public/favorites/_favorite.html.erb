<% if recipe.favorited_by?(current_user) %>
  <%= link_to "♥#{recipe.favorites.count} いいね", recipe_favorite_path(recipe), method: :delete, remote: true, class: "text-dark" %>
<% else %>
  <%= link_to "♡#{recipe.favorites.count} いいね", recipe_favorite_path(recipe), method: :post, remote: true, class: "text-dark" %>
<% end %>