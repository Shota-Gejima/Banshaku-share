<h1></h1>
<h1>編集画面</h1>
<%= form_with model: @recipe, url: recipe_path(@recipe), method: :patch do |f| %>
  <h4>画像</h4>
  <%= f.file_field :recipe_image, accept: "image/*" %>
  <h4>おつまみ名</h4>
  <%= f.text_field :title %>
  <h4>おつまみの説明</h4>
  <%= f.text_area :description %>
  <h4>おつまみの作り方</h4>
  <%= f.text_area :process %>
  
  <%= f.label :alcohol, 'アルコール種類' %>
  <%= f.collection_select(:alcohol_id, Alcohol.all, :id, :name, {}, {class:"#", id:"#"}) %>
  
  <%= f.label :food, '食材' %>
  <%= f.collection_select(:food_id, Food.all, :id, :name, {}, {class:"#", id:"#"}) %>
  
  <%= f.label :making_time, '所要時間' %>
  <%= f.collection_select(:making_time_id, MakingTime.all, :id, :name, {}, {class:"#", id:"#"}) %>
  
  
  <%= f.submit '投稿' %>
<% end %>