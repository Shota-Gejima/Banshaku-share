<div class="container">
  <div class="texts-wrapper">
    <div class="contents-title">
      <div class="row">
        <div class="col-2 mt-5">
          <!--<= render 'genre' %>　サイドバー考え中-->
        </div>
        <!--<div class="container">-->
          <div class="row">
            <% @recipes.each do |recipe| %>
              <div class="col-md-3 my-4">
                <div class="card w-150 bg-transparent border-0" style="width: 18rem;">
                  <!--<img src="..." class="card-img-top" alt="...">-->
                  <%= link_to recipe_path(recipe.id) do %>
                    <%= image_tag recipe.get_recipe_image(100,100) %>
                  <% end %>
                  <div class="card-body">
                    <h5 class="card-title"><%= recipe.title %></h5>
                    <p class="card-text"><%= recipe.description %></p>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item"><%= recipe.alcohol.name %></li>
                    <li class="list-group-item"><%= recipe.food.name %></li>
                    <li class="list-group-item"><%= recipe.making_time.name %></li>
                    <li class="list-group-item"><%= recipe.user.name %></li>
                  </ul>
                  <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <!--</div>-->
      </div>
    </div>
  </div>
</div>
  

