<div class="container">
  <div class="row mt-3">
    <div class="col-12 col-md-7 mb-3">
      <%= render 'tag-search-form' %>
    </div>
    <div class="col-12 col-md-5 mb-3 m-0 p-0">
      <%= render 'word-search-form' %>
    </div>
  </div>
  <div class="d-flex align-items-center">
    <h2 class="bg-brown mt-3 text-left mr-auto">おつまみ一覧(全 <%= @recipes.total_count %> 件)</h2>
    <h5 class="mt-3">
      <i class="crown fa-solid fa-crown"></i>
      "<%= @sort_by %>" で表示中
      <i class="crown fa-solid fa-crown"></i>
    </h5>
    <p class="mt-3 mb-0 ml-auto">
      <%= link_to "新着順", recipes_path(latest: "true"), class: "mx-2" %>
      |<%= link_to "古い順", recipes_path(old: "true"), class: "mx-2" %>
      |<%= link_to "いいねが多い順", recipes_path(most_favorited: "true"), class: "mx-2" %>
      |<%= link_to "閲覧数が多い順", recipes_path(most_viewed: "true"), class: "mx-2" %>
    </p>
  </div>
  <div class="row">
    <%= render "recipe-index", recipes: @recipes %>
  </div>
  <div class="d-flex justify-content-center mt-3 custom-pagination">
    <%= paginate @recipes %>
  </div>
</div>