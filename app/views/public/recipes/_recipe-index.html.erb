<div class="row">
  <% recipes.each do |recipe| %>
    <div class="col-md-3 col-1 my-4">
      <div class="card w-150 bg-transparent border-0" style="width: 18rem;">
        <%= link_to recipe_path(recipe.id) do %>
          <%= image_tag recipe.get_recipe_image(288, 100) %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= recipe.title.truncate(10) %></h5>
          <p class="card-text"><%= recipe.description.truncate(12) %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= recipe.alcohol.name %></li>
          <li class="list-group-item"><%= recipe.food.name %></li>
          <li class="list-group-item"><%= recipe.making_time.name %></li>
          <li class="list-group-item"><%= link_to recipe.user.name, user_path(recipe.user.id) %></li>
        </ul>
        <div class="card-body">
          <% if recipe.favorited_by?(current_user) %>
            <a href="#" class="card-link">
              <%= link_to recipe_favorite_path(recipe), method: :delete do %>
                ♥<%= recipe.favorites.count %> いいね
              <% end %>
            </a>
          <% else %>
            <a href="#" class="card-link">
              <%= link_to recipe_favorite_path(recipe), method: :post do %>
                ♡<%= recipe.favorites.count %> いいね
              <% end %>
            </a>
          <% end %>
          <a href="<%= recipe_path(recipe.id) %>" class="card-link"><%= recipe.comments.count %> コメント</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center mt-3 custom-pagination">
  <%= paginate recipes %>
</div>