<div class="container">
  <div class="row mt-3">
    <div class="col-11">
      <% unless (params[:q][:title_or_description_cont]).present? %>
        <h2 class="mt-3 text-left bg-brown">
          <i class="fa-solid fa-magnifying-glass"></i>検索カテゴリー結果  
          <% if @alcohol.present? %>
            "<%= @alcohol.name %>"
          <% end %>
          <% if @food.present? %>
            "<%= @food.name %>"
          <% end %>
          <% if @making_time.present? %>
            "<%= @making_time.name %>"
          <% end %>
        </h2>
      <% else %>
        <h2 class="mt-3 text-left bg-brown"><i class="fa-solid fa-magnifying-glass"></i>
        検索ワード "<%= params[:q][:title_or_description_cont] %>"</h2>
      <% end %>
      <div class="row">
        <%= render "recipe-index", recipes: @recipes %>
      </div>
      <%= link_to('javascript:history.back()', class: "text-success ml-5") do %>
        <strong><i class="fa-solid fa-circle-left ml-2"></i></i>戻る</strong>
      <% end %>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center mt-3 custom-pagination">
  <%= paginate @recipes %>
</div>