<div class="container">
  <div class="row mt-3">
    <div class="col-11">
    <% if @alcohol.present? %>
      <h2 class="mt-3 text-left bg-brown">検索カテゴリー "<%= @alcohol.name %>"</h1>
    <% elsif @food.present? %>
      <h2 class="mt-3 text-left bg-brown">検索カテゴリー "<%= @food.name %>"</h1>
    <% elsif @making_time.present? %>
      <h2 class="mt-3 text-left bg-brown">検索カテゴリー "<%= @making_time.name %>"</h1>
    <% elsif (params[:q][:title_or_description_cont]).present? %>
      <h2 class="mt-3 text-left bg-brown">検索ワード "<%= params[:q][:title_or_description_cont] %>"</h1>
    <% else %>
    <% end %>
    <div class="row">
      <%= render "recipe-index", recipes: @recipes %>
    </div>
    <%= link_to('javascript:history.back()', class: "text-success ml-5") do %>
      <strong><i class="fa-solid fa-circle-left ml-2"></i></i>戻る</strong>
    <% end %>
  </div>
</div>
